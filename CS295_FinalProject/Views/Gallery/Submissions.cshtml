@model List<Submission>

@{
ViewData["Title"] = "Submissions";
}

<div class="row pageHeader text-center">
    <h1>User Submissions</h1>

</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <form style="float: left; margin: 0 1vw 1vw 0;" method="post" action="/Gallery/SortOldest"><button type="submit" class="btn btn-secondary">Sort Oldest</button></form>
            <form style="clear: right;" method="post" action="/Gallery/SortNewest"><button type="submit" class="btn btn-secondary">Sort Newest</button></form>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
     //flag for if story should be given a grey or white background to help visually break up stories
     bool alt = false;
     foreach (Submission s in Model)
     {
         if (!alt)
         {
             <div class="submission clearfix shadow bg-white rounded">
                 <div class="col-4">
                     <img src=@s.Link alt="User Submission" class="img-fluid">
                 </div>
                 
                 <h4>@s.Name by <i>@s.Username.Name</i></h4>
                 <p class="float-end">Posted @s.Date</p>
             </div>
             alt = !alt;
         }
         else
         {
             <div class="submission clearfix shadow bg-white rounded">
                 <div class="col-4">
                     <img src=@s.Link alt="User Submission" class="img-fluid">
                 </div>
                 
                 <h4>@s.Name by <i>@s.Username.Name</i></h4>
                 <p class="float-end">Posted @s.Date</p>
             </div>
            alt = !alt;
         }
     }
}
else
{
    <div class="text-center">
        <h3>There are no post yet.</h3>
    </div>
}