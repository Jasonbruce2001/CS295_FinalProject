@model List<Product>

@{
    ViewData["Title"] = "Store Page";
}

<div class="row pageHeader">
    <h1>Store Page</h1>
    <p>Store description</p>
</div>
<div class="row">
    <div class="d-flex justify-content-center">
        <h2>Feature Message</h2>
    </div>
</div>

<!-- Filter -->
<div class="d-flex justify-content-center" style="margin-bottom: 1vw;">
    <form method="post" action="/Store/ProductFilter">
        <label name="Name">Name</label>
        <input name="Name"/>
        <button type="submit" class="btn btn-secondary">Submit</button>
        <a href="/Store/Index" class="btn btn-danger">Reset</a>
    </form>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity On Hand</th>
            <th scope="col">Unit Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.QuantityOnHand</td>
                <td>$@Math.Round(p.UnitPrice, 2)</td>
            </tr>
        }
        </tbody>
    </table>
</div>
